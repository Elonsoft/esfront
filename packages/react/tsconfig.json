{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["node_modules/@types", "../../node_modules/@types"],
    "paths": {
      "~storybook/*": [".storybook/*"]
    },
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "../../node_modules", "lib", "./*.js"]
}
